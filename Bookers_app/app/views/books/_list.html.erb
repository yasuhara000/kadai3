



  <h1 class="">User info</h1>

<%= attachment_image_tag user, :profile_image, format:'jpeg',class: " profile-img", fallback:"snow.jpg",size: "90x90" %></br>

  <p>name:<%=user.name%></p>
  <p>introduction:<%=user.introduction%></p>
    <% if user.id == current_user.id %>
      <p class="mt-3">
        <%= link_to edit_user_path(user) do%>
          <span class="btn btn-default glyphicon glyphicon-wrench col-xs-9"></span>
        <%end%>
        </p>
    <%end%>


  <p>　　</p>
  <h1>New book </h1>
  <%=form_for(book, url:books_path) do |f|%>

    <h4 class="">title</h4>
    <span><%=f.text_field :title %></span>

    <h4 class="">body</h4>
    <span><%=f.text_area :body%></span>

  <p><%=f.submit 'Create Book' ,class: "btn btn-primary"%></p>
  <%end%>

  <%=flash[:notice]%>
  <% if book.errors.any? %>
    <ul>
          <% book.errors.full_messages.each  do |message| %>
          <li>error</li>
          <li><%= message %></li>

      <%end%>
      </ul>
  <%end%>
