
<div class="container">
    <div class="row">
      <div class ="col-xs-3">
        <%= render 'books/list', user: @user , book:@book%>
        </div>

      <div class ="col-xs-9 pull-left">

      <h1>User</h1>
      <span>image</span>
      <table class="table table-striped">

        <%@users.each do |f| %>
        <tr>
          <p>
            <td><%= attachment_image_tag f, :profile_image, fallback:"snow.jpg",format:'jpeg',size: "30x30"%></td>
            <td><%= f.name%></td>
            <td><%= link_to "Show", user_path(f)%></td>
          </p>
        </tr>
        <%end%>
      </table>
      </div>
</div>
</div>
</div>
